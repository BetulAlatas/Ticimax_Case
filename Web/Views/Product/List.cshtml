@model List<Web.ViewModel.ProductViewModel>
@{
    ViewBag.Title = "Ürün Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-breadcrumb bg-white">
    <div class="row align-items-center">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        </div>
        <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
            <div class="d-md-flex">
                <ol class="breadcrumb ms-auto">
                </ol>
                <a href="/Product/Add"
                   class="btn btn-success  d-none d-md-block pull-right ms-3 hidden-xs hidden-sm waves-effect waves-light text-white">
                    + Yeni
                </a>
            </div>
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-sm-12">
            <div class="white-box">
                <h3 class="box-title">Ürün Listesi</h3>
                <p class="text-muted"></p>
                <div class="table-responsive">
                    <table class="table text-nowrap">
                        <thead>
                            <tr>
                                <th class="border-top-0">Kategori</th>
                                <th class="border-top-0">Adı</th>
                                <th class="border-top-0">Fiyat</th>
                                <th class="border-top-0">Durum</th>
                                <th class="border-top-0">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @foreach (var categoryName in item.CategoryNameList)
                                        {
                                            <span>@categoryName ,</span>
                                        }
                                    </td>
                                    <td>@item.Product.Name</td>
                                    <td>@item.Product.Price</td>
                                    <td>
                                        @if (item.Product.Status == true)
                                        {
                                            <a class="btn btn-success text-white">
                                                Aktif
                                            </a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-danger text-white">
                                                Pasif
                                            </a>
                                        }
                                    </td>
                                    <td>
                                        <div class="col-sm-6 col-md-6 col-lg-3 f-icon">
                                            <a href="/Product/Edit/@item.Product.Id" title="Düzenle"><i class="fas fa-pencil-alt"></i></a>
                                            <a href="/Product/Delete/@item.Product.Id" title="Sil"><i class="far fa-trash-alt"></i></a>

                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End PAge Content -->
</div>