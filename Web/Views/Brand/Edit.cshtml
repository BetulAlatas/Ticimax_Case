@model Web.ViewModel.BrandViewModel
@{
    ViewBag.Title = "Marka Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">  
    <!-- Row -->
    <div class="row">
        <!-- Column -->
        <div class="col-lg-12 col-xlg-9 col-md-12">
            <div class="card">
                <div class="card-body">
                    <form class="form-horizontal form-material" action="/Brand/Edit" method="post">
                        <input type="hidden" name="Id" value="@Model.Brand.Id" />
                        <input type="hidden" name="Status" value="True" />                        
                        <div class="form-group mb-4">
                            <label for="example-email" class="col-md-12 p-0">Adı</label>
                            <div class="col-md-12 border-bottom p-0">
                                <input type="text" class="form-control p-0 border-0" name="Name" value="@Model.Brand.Name">
                            </div>
                        </div>                       
                        <div class="form-group mb-4">
                            <div class="col-sm-12">
                                <button class="btn btn-success">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Column -->
    </div>   
</div>